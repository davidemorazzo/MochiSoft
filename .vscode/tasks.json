{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Build QEMU",
          "type": "shell",
          "command": "make --directory=${workspaceFolder}/build",
        //   "problemMatcher": {
        //     "base": "$gcc",
        //     "fileLocation": ["relative", "${workspaceFolder}/build/gcc"]
        //   },
          "group": {
              "kind": "build",
              "isDefault": true
          }
        },
        {
          "label": "Run QEMU",
          "type": "shell",
          "command": [
            "echo 'QEMU i386 started';",
            "-m 4G",
            "qemu-system-i386 -kernel ${workspaceFolder}/build/MochiOS " , 
            "-nographic -s -S ", 
            "-drive id=disk,file=${workspaceFolder}/hdd.img,if=none ",
            "-device ahci,id=ahci ",
            "-device ide-hd,drive=disk,bus=ahci.0"],
          "dependsOn": ["Build QEMU"],
          "isBackground": true,
          "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "QEMU i386 started",
              }
            }
          ]
        }
    ]
}